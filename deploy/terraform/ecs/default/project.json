{
  "name": "terraform-ecs-default",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "deploy/terraform/ecs/default",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "inputs": ["{projectRoot}/**/*"],
      "options": {
        "command": "terraform init"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "terraform validate"
      }
    },
    "test:e2e": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "exit 0"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "exit 0"
      }
    }
  },
  "tags": ["terraform"]
}
