{
  "name": "ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "src/ui",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd src/ui && ./mvnw package"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd src/ui && ./mvnw test -DexcludedGroups=integration"
      }
    },
    "test:integration": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd src/ui && ./mvnw test -Dgroups=integration"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd src/ui && ./mvnw spring-boot:run"
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "context": "src/ui",
        "metadata": {
          "images": ["public.ecr.aws/aws-containers/retail-store-sample-ui"]
        }
      }
    }
  },
  "tags": ["service"]
}
