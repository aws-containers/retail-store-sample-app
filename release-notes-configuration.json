{
  "categories": [
    {
      "title": "## 🚀 New Features",
      "labels": ["feat"]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": ["fix"]
    },
    {
      "title": "## 🧪 Tests",
      "labels": ["test"]
    },
    {
        "title": "## 📦 Dependencies",
        "labels": ["deps"]
    },
    {
      "title": "## 📖 Documentation",
      "labels": ["docs"]
    },
    {
      "title": "## 🧹 Chores",
      "labels": ["chore"]
    }
  ],
  "ignore_labels": [
    "release",
    "deps",
    "dependabot"
  ],
  "transformers": [
    {
      "pattern": "[\\-\\*] ((feat|fix|test|chore|docs):)( )?(.+?)\n(.+?[\\-\\*] )(.+)",
      "target": "- $4\n  - $6"
    }
  ],
  "label_extractor": [
    {
      "pattern": "^(feat|fix|test|chore|docs): .*",
      "on_property": "title",
      "target": "$1"
    },
    {
      "pattern": "^chore(deps)",
      "on_property": "title",
      "target": "deps"
    },
    {
      "pattern": "^chore(release)",
      "on_property": "title",
      "target": "release"
    }
  ]
}
